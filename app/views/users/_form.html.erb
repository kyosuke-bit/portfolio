<% if user.errors.present? %>
  <ul id="error_explanation">
    <% user.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: user, local: true do |f| %>
  <!-- Name -->
  <div class="form-group">
    <%= f.text_field :name, class: "form-control mb-4", placeholder: "名前"%>
  </div>
  <!-- Email -->
  <div class="form-group">
    <%= f.text_field :email, class: "form-control mb-4", placeholder: "メールアドレス"%>
  </div>
  <!-- Password -->
  <div class="form-group">
    <%= f.text_field :password, class: "form-control mb-4", placeholder: "パスワード"%>
  </div>
  <!-- Password -->
  <div class="form-group">
    <%= f.text_field :password_confirmation, class: "form-control mb-4", placeholder: "パスワード(確認)"%>
  </div>
  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked>
        <label class="form-check-label" for="form1Example3"> パスワードを保存 </label>
      </div>
    </div>
    <div class="col">
      <!-- Simple link -->
      <a href="#!">パスワードを忘れましたか?</a>
    </div>
  </div>
  <!-- Submit button -->
  <%= f.submit "登録する", class: "btn btn-primary btn-block my-4" %>
<% end %>
